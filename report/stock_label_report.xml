<odoo>
    <!-- Plantilla QWeb -->
    <template id="custom_stock_label_report">
        <t t-call="web.basic_layout">
            <t t-foreach="doc.move_ids_without_package" t-as="move_line">
                <div style="page-break-after: always;">
                    <h2>Etiqueta del Producto</h2>
                    <p><strong>Producto:</strong> <t t-esc="move_line.product_id.display_name"/></p>
                    <p><strong>Gramaje:</strong> <t t-esc="move_line.gramaje"/></p>
                    <p><strong>Ancho:</strong> <t t-esc="move_line.ancho"/></p>
                    <p><strong>Tipo:</strong> <t t-esc="move_line.tipo"/></p>
                    <p><strong>Kilos:</strong> <t t-esc="move_line.kilos"/></p>
                    <p><strong>Planta:</strong> <t t-esc="move_line.planta"/></p>
                </div>
            </t>
        </t>
    </template>

    <!-- Registro del reporte -->
    <report
        id="custom_stock_label_report"
        model="stock.picking"
        string="Custom Stock Label"
        report_type="qweb-pdf"
        file="stock_move_add_fields.custom_stock_label_report"
        name="stock_move_add_fields.custom_stock_label_report"
    />
</odoo>
